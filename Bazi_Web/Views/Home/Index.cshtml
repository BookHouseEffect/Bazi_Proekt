@model IEnumerable< Db201617zVaProektRnabContext.Brojac >
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div id="myCarousel" class="carousel slide " data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">

                <div class="item">
                    <img src="~/Content/Images/Carousel/carousel_airplane_1.jpg" alt="Chania">
                    <div class="carousel-caption">
                        <h3>EASY REGISTRATION FOR AIRLINES</h3>
                        <p>Any company can register on our site and provide information for the passengers.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/Carousel/carousel_airplane_3.jpg" alt="Flower">
                    <div class="carousel-caption">
                        <h3>EASIER REGISTATION FOR PASSENGERS</h3>
                        <p>Each passenger can register an account. Even the whole family can use a single account.</p>
                    </div>
                </div>

                <div class="item active">
                    <img src="~/Content/Images/Carousel/carousel_airplane_2.jpg" alt="airplane">
                    <div class="carousel-caption">
                        <h3>EASY TO ACCESS AND FIND</h3>
                        <p>
                            We are providing easy access for many internation airlines and flight.
                            Feel free to find your flight today
                        </p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/Carousel/carousel_airplane_4.jpg" alt="Flower">
                    <div class="carousel-caption">
                        <h3>BOOK FOR YOUR TICKET TODAY</h3>
                        <p>You can book and cancel your ticket any time, but the payment on the airport.</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row">
        @Html.Partial("StatisticView", @Model)
    </div>
</div>
