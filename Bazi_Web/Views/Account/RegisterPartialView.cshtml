@model Bazi_Web.Models.RegisterViewModel

<div class="panel-group">
    <h3 class="text-primary">Account Informations</h3>
    <hr />

    @Html.HiddenFor(x => x.SelectedAccountType)

    <div class="form-group">
        @Html.LabelFor(m => m.EmailAddress, new { @Class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.EmailAddress, new { @Class = "form-control" })
            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @Class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Username, new { @Class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @Class = " control-label col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(m => m.Password, new { @Class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RepeatePassword, new { @Class = " control-label col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(m => m.RepeatePassword, new { @Class = "form-control" })
            @Html.ValidationMessageFor(m => m.RepeatePassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />
</div>
