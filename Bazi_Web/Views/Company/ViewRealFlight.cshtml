@model Bazi_Web.Models.SchemeListViewModel

@{
    ViewBag.Title = "ViewReal";
}

<h2>ViewReal</h2>

<div class="panel panel-default">
    <div class="panel panel-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Airport</th>
                    <th>Flight</th>
                    <th>Departure time</th>
                    <th>Arival time</th>
                    <th>Status</th>
                    <th>Duration</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Schemes)
            {
                    <tr>
                        <th>@item.PlanId</th>
                        <td>@item.Avioni_AvionId.ImeNaAvion (@item.Avioni_AvionId.Registracija)</td>
                        <td>
                            @item.Megjuletovi_MegjuletId.Aerodromi_AerodromOdId.ImeNaAerodrom,
                            @item.Megjuletovi_MegjuletId.Aerodromi_AerodromOdId.Adresi_AdresaId.Grad,
                            @item.Megjuletovi_MegjuletId.Aerodromi_AerodromOdId.Adresi_AdresaId.Drzhava
                            -
                            @item.Megjuletovi_MegjuletId.Aerodromi_AerodromOdId.ImeNaAerodrom,
                            @item.Megjuletovi_MegjuletId.Aerodromi_AerodromDoId.Adresi_AdresaId.Grad,
                            @item.Megjuletovi_MegjuletId.Aerodromi_AerodromDoId.Adresi_AdresaId.Drzhava
                        </td>
                        <td>@item.DatumVremeNaPoletuvanje</td>
                        <td>@item.DatumVremeNaSletuvanje</td>
                        <td>@item.StatusNaLetot</td>
                        <td>@item.Vremetraenje</td>
                        <td>
                            <a class="btn btn-success" data-toggle="modal" data-target="#prices_@item.PlanId">View Prices</a>
                            <div id="prices_@item.PlanId" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">@item.PlanId's prices</h4>
                                        </div>
                                        <div class="modal-body">
                                            <table class="table-bordered table table-striped table-condensed table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Class Name</th>
                                                        <th>One-way-ticket</th>
                                                        <th>Return ticket</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var k in item.Cenovnicis_PlanId.ToList())
                                                    {
                                                        <tr>
                                                            <td>@k.Klasi_KlasaId.ImeNaKlasa</td>
                                                            <td>@k.CenaVoEdenPravec</td>
                                                            <td>@k.CenaPovraten</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
</div>